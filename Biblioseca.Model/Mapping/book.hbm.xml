<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
  assembly="Biblioseca.Model"
  namespace="Biblioseca.Model">
	<class name="Book" table="Books">
		<id name="Id">
			<generator class="identity" />
		</id>
		<property name="Title">
			<column name="Title" length="100" not-null="true" />
		</property>
		<many-to-one name="Author" class="Author">
			<column name="AuthorId" not-null="false" />
		</many-to-one>
		<property name="Description">
			<column name="Description" length="300" not-null="false" />
		</property>
		<many-to-one name="Category" class="Category">
			<column name="Category" sql-type="int" not-null="true" />
		</many-to-one>
		<property name="ISBN">
			<column name="ISBN" length="100" not-null="false" />
		</property>
		<property name="Price">
			<column name="Price"/>
		</property>
		<property name="Stock">
			<column name="Stock" />
		</property>
		
	</class>
</hibernate-mapping>

