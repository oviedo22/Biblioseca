<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
  assembly="Biblioseca.Model"
  namespace="Biblioseca.Model">
	<class name="Lending" table="Lending">
		<id name="Id">
			<generator class="identity" />
		</id>

		<many-to-one name="Book" class="Book">
			<column name="Book" sql-type="int" not-null="true" />
		</many-to-one>

		<many-to-one name="Member" class="Member">
			<column name="Member" sql-type="int" not-null="true" />
		</many-to-one>

		<property name="LendDate">
			<column name="LendDate"  not-null="true" />
		</property>

		<property name="ReturnDate">
			<column name="ReturnDate"  not-null="true" />
		</property>
	</class>
</hibernate-mapping>
